<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.marahoney.tasque.ui.f_category.CategoryFragmentViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.f_form.FormFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_cjk_kr_black"
                android:text="카테고리"
                android:textColor="@color/textBlack"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:text="@{vm.category.size + @string/save_category_string}"
                android:textColor="@color/textGrey"
                android:textSize="18sp"
                android:visibility="@{vm.category.size == 0 ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/title"
                tools:text="n개의 저장된 카테고리" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingBottom="@dimen/default_margin"
                android:visibility="@{vm.category.size == 0 ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintTop_toBottomOf="@id/subTitle"
                app:listItem="@{vm.category}"
                app:viewModel="@{vm}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginBottom="112dp"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:text="저장된 카테고리가 없습니다.\n+버튼을 통해 카테고리를 추가해보세요."
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:textSize="16sp"
                android:visibility="@{vm.category.size == 0 ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>